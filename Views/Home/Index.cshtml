@model IEnumerable<DropDownList.Film>
@{
    ViewBag.Title = "Index";
}
<!DOCTYPE html>
<html>
<head>
    <title>Index</title>
    <link href="~/Content/MyStyle.css" rel="stylesheet"/>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <link href="~/Content/MyStyle.css" rel="stylesheet" />
</head>

<body>
<div id ="sel" class="container">
    <div class="dropdown">


        @using (@Html.BeginForm("Index", "Home", FormMethod.Get))
        {
            @Html.DropDownList("selId", new SelectList(ViewBag.list, "IDs", "Value", ViewData["idSel"]),
                "выберите", new {@id = "sub"})
        }
        @ViewData["idSel"]

    </div>
</div>
    
    <div class="container">


        <table class="table table-striped">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.film1)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Category.category1)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.film1)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Category.category1)
                    </td>
                 
                </tr>
                }

        </table>
    </div>

<script type="text/javascript">

    $(function() {
        $('#sub').change(function(e) {
            $('form').submit();
        });
    });
</script>

</body>
</html>